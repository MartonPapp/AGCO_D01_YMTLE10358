FORM DB_UPD_YMTLV_EMAIL_REC .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO YMTLV_EMAIL_REC.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_YMTLV_EMAIL_REC-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM YMTLT_EMAIL_REC WHERE
  EMAIL_LIST_ID = YMTLV_EMAIL_REC-EMAIL_LIST_ID AND
  SMTP_ADDR = YMTLV_EMAIL_REC-SMTP_ADDR .
    IF SY-SUBRC = 0.
    DELETE YMTLT_EMAIL_REC .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM YMTLT_EMAIL_REC WHERE
  EMAIL_LIST_ID = YMTLV_EMAIL_REC-EMAIL_LIST_ID AND
  SMTP_ADDR = YMTLV_EMAIL_REC-SMTP_ADDR .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR YMTLT_EMAIL_REC.
    ENDIF.
YMTLT_EMAIL_REC-MANDT =
YMTLV_EMAIL_REC-MANDT .
YMTLT_EMAIL_REC-EMAIL_LIST_ID =
YMTLV_EMAIL_REC-EMAIL_LIST_ID .
YMTLT_EMAIL_REC-SMTP_ADDR =
YMTLV_EMAIL_REC-SMTP_ADDR .
    IF SY-SUBRC = 0.
    UPDATE YMTLT_EMAIL_REC .
    ELSE.
    INSERT YMTLT_EMAIL_REC .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_YMTLV_EMAIL_REC-UPD_FLAG,
STATUS_YMTLV_EMAIL_REC-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
